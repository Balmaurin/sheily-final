{
  "audit_system": {
    "version": "2.0.0",
    "project_name": "Sheily AI",
    "audit_frequency": "daily",
    "retention_days": 365,
    "enable_real_time_monitoring": true,
    "enable_continuous_integration": true,
    "enable_compliance_reporting": true
  },
  "quality_gates": {
    "code_coverage": {
      "target": 70,
      "critical": 50,
      "warning": 60
    },
    "security_issues": {
      "target": 0,
      "critical": 5,
      "warning": 3
    },
    "test_pass_rate": {
      "target": 100,
      "critical": 95,
      "warning": 98
    },
    "code_quality": {
      "target": 8.0,
      "critical": 6.0,
      "warning": 7.0
    },
    "compilation_errors": {
      "target": 0,
      "critical": 1,
      "warning": 0
    }
  },
  "monitoring": {
    "metrics_collection_interval": 60,
    "alert_thresholds": {
      "cpu_percent": 80,
      "memory_percent": 85,
      "disk_percent": 90,
      "test_pass_rate": 95,
      "code_coverage": 70
    },
    "notification_channels": [
      "console",
      "file",
      "email"
    ]
  },
  "compliance_frameworks": {
    "SOC2": {
      "enabled": true,
      "requirements": [
        "security",
        "availability",
        "processing_integrity",
        "confidentiality",
        "privacy"
      ]
    },
    "ISO_27001": {
      "enabled": true,
      "requirements": [
        "information_security_management",
        "risk_management",
        "access_control",
        "operations_security"
      ]
    },
    "OWASP": {
      "enabled": true,
      "requirements": [
        "input_validation",
        "output_encoding",
        "authentication",
        "session_management"
      ]
    }
  },
  "reporting": {
    "formats": [
      "json",
      "html",
      "markdown",
      "pdf"
    ],
    "output_directory": "audit_2025/reports",
    "include_charts": true,
    "include_recommendations": true,
    "include_compliance_certificate": true
  },
  "automation": {
    "enable_auto_optimization": true,
    "enable_continuous_audit": true,
    "enable_trend_analysis": true,
    "enable_regression_detection": true,
    "enable_performance_monitoring": true
  },
  "integration": {
    "github_actions": {
      "enabled": true,
      "workflow_files": [
        ".github/workflows/audit.yml",
        ".github/workflows/quality_gates.yml",
        ".github/workflows/security.yml"
      ]
    },
    "pre_commit_hooks": {
      "enabled": true,
      "hooks": [
        "trailing-whitespace",
        "end-of-file-fixer",
        "check-yaml",
        "check-json",
        "check-python-compile"
      ]
    }
  },
  "advanced_features": {
    "machine_learning_insights": true,
    "predictive_analytics": true,
    "automated_recommendations": true,
    "performance_profiling": true,
    "security_vulnerability_scanning": true,
    "dependency_analysis": true,
    "code_complexity_analysis": true,
    "test_impact_analysis": true
  }
}
