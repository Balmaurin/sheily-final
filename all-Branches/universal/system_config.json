{
  "system_name": "Sheily Universal",
  "version": "1.0.0",
  "description": "Sistema de aprendizaje continuo unificado - aprende de cualquier dataset sin importar el dominio",

  "model": {
    "base_model": "TinyLlama/TinyLlama-1.1B-Chat-v1.0",
    "architecture": "LlamaForCausalLM",
    "max_length": 2048,
    "device": "privateuseone:0"
  },

  "lora": {
    "r": 56,
    "lora_alpha": 112,
    "lora_dropout": 0.025,
    "target_modules": [
      "q_proj", "k_proj", "v_proj", "o_proj",
      "gate_proj", "up_proj", "down_proj"
    ],
    "bias": "none",
    "task_type": "CAUSAL_LM"
  },

  "training": {
    "batch_size": 2,
    "gradient_accumulation_steps": 8,
    "learning_rate": 2e-4,
    "num_epochs": 3,
    "warmup_ratio": 0.03,
    "max_grad_norm": 1.0,
    "optimizer": "adamw",
    "scheduler": "cosine",
    "foreach": false,
    "fp16": false,
    "logging_steps": 10
  },

  "corpus": {
    "unified_path": "corpus/unified/",
    "incoming_path": "corpus/incoming/",
    "auto_process": true,
    "index_on_add": true
  },

  "rag": {
    "enabled": true,
    "retrieval_top_k": 5,
    "min_score": 0.3,
    "embedding_model": "sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2"
  },

  "continuous_learning": {
    "enabled": true,
    "auto_train_threshold": 100,
    "checkpoint_every": 500,
    "quality_check": true
  }
}
